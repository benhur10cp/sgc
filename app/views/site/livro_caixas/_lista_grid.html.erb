<div class="row">
  <br>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
      <th> Data - Hora</th>
      <th> Descrição</th>
      <th> Tipo</th>
      <th> Valor</th>
      <th> Ação</th>
    </tr>


    <% @registros_caixa.each do |registro| %>
        <tr>
          <!--<td><%#= l(registro.created_at, format: :short) %></td>-->
          <td><%= registro.created_at.strftime("%d/%m/%Y %H:%M") %></td>

          <!--<td><%#= Time.zone('-3').parse(registro.created_at.to_s) %></td>-->

          <td><%= registro.descricao %></td>
          <td><%= registro.tipo_movimentacao.nm_movimentacao %></td>
          <td><%= humanized_money_with_symbol registro.valor %></td>
          <td></td>
        </tr>
    <% end %>
  </table>
  <%= paginate @registros_caixa %>
</div>