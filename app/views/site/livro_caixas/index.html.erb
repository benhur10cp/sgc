<div class="container-fluid padding-int">
  <div class="row">
    <h3>LIVRO CAIXA</h3>
  </div>

  <div class="row">

    <div class="col-md-8" style="padding-left: 0px !important;">

      <%= form_tag site_livro_caixas_path, :method => 'get', class: 'form-inline' do %>
          <div class="col-md-6" style="padding-left: 0px !important;">
            <%= date_range_picker_tag :data_inicio, :data_fim, 'Data do Registro', params[:data_inicio], params[:data_fim], required = false, bootstrapform = true %>
          </div>
          <div class="col-md-2" style="padding-top: 2.3%">
            <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                Filtrar <i class="fa fa-search" aria-hidden="true"></i>
            <% end %>
          </div>
      <% end %>
    </div>
    <div class="col-md-2 col-md-offset-2" style="padding-top: 1.3%; padding-right: 0px;">
      <%= link_to 'Novo Registro', new_site_livro_caixa_path, class: 'btn btn-success pull-right', id: 'novoregistro' %>
    </div>
  </div>

  <%= render 'lista_grid' %>
</div>

</div>


<script type="text/javascript">

    $(function () {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            language: 'pt-BR'
        });
        $('.datepicker').mask('99/99/9999');
    });
</script>